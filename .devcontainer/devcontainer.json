{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "hostRequirements": {
    "cpus": 4
  },

  "features": {
     "ghcr.io/devcontainers/features/nix:1": {
	"flakeUri": "https://gitlab.haskell.org/ghc/ghc-wasm-meta/-/archive/master/ghc-wasm-meta-master.tar.gz"	
      }
  },

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "bbenoist.nix",
        "haskell.haskell",
        "s0kil.vscode-hsx",
        "vigoo.stylish-haskell"
      ]
    }
  }
}
